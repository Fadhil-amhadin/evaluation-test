<%- include ('partials/header') %> 
<%- include ('partials/nav-min') %>
<div class="container mt-5" style="border: 1px solid black; border-radius: 6px;">
    <h1 class="text-center">My Task</h1>
    <% for( let i = 0; i < items.length; i++ ) { %>
        <div class="d-flex justify-content-between my-2">
            <% if (items[i].is_done === 0) { %>
                <span><h5>- <%= items[i].taskName %> </h5></span>
                <span><a href="done/<%= items[i].id %> " class="btn btn-success">Done</a>
                    <a href="deleteTask/<%= items[i].id %> " class="btn btn-danger">Delete</a>
                </span>
            <% } else { %>
                <span><h5 style="text-decoration: line-through;">- <%= items[i].taskName %> </h5></span>
                    <form action="deleteTask/<%= items[i].id %>" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </span>
            <% } %>
        </div>
    <% } %>
</div>
<div class="container d-flex justify-content-center mt-3">
    <a href="addTask" class="btn btn-success">Add Task</a>
</div>
