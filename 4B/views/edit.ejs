<%- include ('partials/header') %> 
<%- include ('partials/nav') %>
    <div class="container" style="margin-top: 100px">
        <div class="row" style="border: 1px solid gray; border-radius: 5px;">
            <div class="col-md-6">
                <div style="padding: 15px;">
                    <img src="/images/<%= items[0].photo %> ">
                </div>
            </div>
            <div class="col-md-6" style="border-left: 1px solid grey;">
                <form action="/edit/<%= items[0].id %> " method="post" enctype="multipart/form-data">
                    <h1> Name </h1>
                    <input type="text" class="form-control" value="<%= items[0].name %>">
                    <h4> Description</h4>
                    <input type="text" class="form-control" value="<%= items[0].description %>">
                    <div><h4>Upload photo</h4></div>
                    <div>
                        <input type="file" name="photo" class="inputfile" />
                    </div>
                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include ('partials/footer') %>